<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="25dp"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:id="@+id/restaurant_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#f27f2c"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="에 대한 솔직한 리뷰를 남겨주세요!" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="55dp"
            android:text="맛" />

        <RatingBar
            android:id="@+id/score_flavor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:progressTint="#ffe630"
            android:numStars="5"
            android:stepSize="1" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="55dp"
            android:layout_gravity="center"
            android:text="양" />

        <RatingBar
            android:id="@+id/score_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:progressTint="#ffe630"
            android:numStars="5"
            android:stepSize="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_gravity="center"
            android:text="서비스" />

        <RatingBar
            android:id="@+id/score_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:progressTint="#ffe630"
            android:numStars="5"
            android:stepSize="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="43dp"
            android:layout_gravity="center"
            android:text="총점" />

        <RatingBar
            android:id="@+id/total_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:progressTint="#ffe630"
            android:numStars="5"
            android:stepSize="1" />
    </LinearLayout>

        <EditText
            android:id="@+id/contents_text"
            android:layout_width="match_parent"
            android:layout_height="216dp"
            android:ems="10"
            android:hint="글자수는 500자로 제한됩니다."
            android:inputType="textMultiLine"
            android:maxLength="550" />

    <ImageView
        android:id="@+id/review_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:visibility="gone"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">
    <Button
        android:id="@+id/btn_open_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="사진첨부" />

    <Button
        android:id="@+id/btn_write_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="작성완료" />
    </LinearLayout>
    </LinearLayout>
</ScrollView>

